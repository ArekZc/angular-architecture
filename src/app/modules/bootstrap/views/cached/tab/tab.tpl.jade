ul.nav(ng-class="$navClass", role="tablist")
    li(ng-repeat="$pane in $panes track by $index", ng-class="$index == $panes.$active ? $activeClass : ''")
        a(role="tab", data-toggle="tab", ng-click="$setActive($index)", data-index="{{ $index }}", ng-bind-html="$pane.title")
.tab-content(ng-transclude)

