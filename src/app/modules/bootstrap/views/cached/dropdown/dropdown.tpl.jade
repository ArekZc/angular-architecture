ul.dropdown-menu(tabindex="-1", role="menu")
    li(role="presentation", ng-class="{'divider': item.divider}", ng-repeat="item in content")
        a(role="menuitem", tabindex="-1", ng-href="{{ item.href }}", ng-if="!item.divider && item.href", target="{{ item.target || '' }}", ng-bind="item.text")
        a(role="menuitem", tabindex="-1", ng-href="{{ item.href }}", ng-if="!item.divider && item.click", ng-click="$eval(item.click);$hide()", ng-bind="item.text")

